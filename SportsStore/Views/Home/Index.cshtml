@model ProductsListViewModel;
@{
    ViewBag.Title = "Home";

}
<h4>Welcome to SportsStore</h4>

@foreach (var item in Model.Products)
{
    <div>
        <h3>@item.Name</h3>
        @item.Description
        <h4>@item.Price.ToString("c")</h4>
    </div>
}
<div page-model=" Model.PagingInfo" page-action="Index"></div>